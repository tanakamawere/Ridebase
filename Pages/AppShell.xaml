<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ridebase.Pages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:icons="clr-namespace:Ridebase.Helpers.FontsCode"
    xmlns:pages="clr-namespace:Ridebase.Pages.Rider"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:Ridebase.ViewModels"
    Title="Ridebase"
    x:DataType="vm:AppShellViewModel"
    Shell.FlyoutBehavior="Flyout">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" StatusBarStyle="{AppThemeBinding Light=DarkContent, Dark=LightContent}" />
    </Shell.Behaviors>

    <Shell.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </Shell.Resources>


    <Shell.FlyoutHeader>
        <StackLayout>
            <Button
                Margin="20"
                Command="{Binding LoginCommand}"
                IsVisible="{Binding IsLoggedIn, Converter={StaticResource InvertedBoolConverter}}"
                Text="Login" />

            <Grid
                Padding="20"
                ColumnDefinitions="80, *"
                ColumnSpacing="20"
                IsVisible="{Binding IsLoggedIn}"
                RowDefinitions="Auto, Auto">
                <Border
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    HeightRequest="80"
                    Stroke="Gray"
                    StrokeShape="RoundRectangle 40"
                    StrokeThickness="1"
                    WidthRequest="80">
                    <Image
                        Aspect="AspectFit"
                        HeightRequest="150"
                        Source="{Binding RidebaseUser.ImageUrl}"
                        WidthRequest="150" />
                </Border>
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Text="{Binding RidebaseUser.UserName}" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding RidebaseUser.UserId}" />
            </Grid>
        </StackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" FlyoutIcon="{FontImageSource FontFamily=faregular, Glyph={x:Static icons:Fasolid.Message}, Color={AppThemeBinding Dark={StaticResource White}, Light={StaticResource Primary}}}">

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:HomePage}"
            Route="Home">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="fasolid"
                    Glyph="{x:Static icons:Fasolid.House}"
                    Size="5"
                    Color="{AppThemeBinding Dark={StaticResource White},
                                            Light={StaticResource Primary}}" />
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <!--  Fleet Management Option  -->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent Title="Fleet Management">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="fasolid"
                    Glyph="{x:Static icons:Fasolid.Car}"
                    Size="5"
                    Color="{AppThemeBinding Dark={StaticResource White},
                                            Light={StaticResource Primary}}" />
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <!--  Support Option  -->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent Title="Support">
            <ShellContent.Icon>
                <FontImageSource
                    FontFamily="fasolid"
                    Glyph="{x:Static icons:Fasolid.Phone}"
                    Size="5"
                    Color="{AppThemeBinding Dark={StaticResource White},
                                            Light={StaticResource Primary}}" />
            </ShellContent.Icon>
        </ShellContent>
    </FlyoutItem>

    <!--  Flyout Footer  -->
    <Shell.FlyoutFooter>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Button Command="{Binding ChangeToDriverShellAsyncCommand}" Text="Driver mode" />
            <Button
                BackgroundColor="Red"
                Command="{Binding LogoutUserCommand}"
                IsVisible="{Binding IsLoggedIn}"
                Text="Logout" />
        </VerticalStackLayout>
    </Shell.FlyoutFooter>

</Shell>
