<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Ridebase.Pages.Rider.RideDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dxc="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
    xmlns:dxco="clr-namespace:DevExpress.Maui.Core;assembly=DevExpress.Maui.Core"
    xmlns:icons="clr-namespace:Ridebase.Services.FontsCode"
    xmlns:maps="clr-namespace:Maui.GoogleMaps;assembly=Maui.GoogleMaps"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:models="clr-namespace:Ridebase.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:Ridebase.ViewModels.Rider"
    xmlns:wits="http://what.is.this.sheet/schemas/controls"
    x:DataType="vm:SearchPageViewModel">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />


        <!--  Section for the ride confirmation  -->
        <VerticalStackLayout
            Padding="10"
            Spacing="15"
            VerticalOptions="FillAndExpand">
            <!--  Ride option section  -->
            <Border
                Padding="10"
                AbsoluteLayout.LayoutBounds="0,0,1,50"
                AbsoluteLayout.LayoutFlags="WidthProportional"
                BackgroundColor="{AppThemeBinding Dark={StaticResource BlueGray},
                                                  Light={StaticResource White},
                                                  Default={StaticResource White}}"
                HeightRequest="100"
                StrokeShape="RoundRectangle 20">

                <Grid
                    Padding="20,0"
                    ColumnDefinitions="*,Auto,*"
                    ColumnSpacing="20"
                    HorizontalOptions="FillAndExpand">
                    <ImageButton
                        Grid.Column="0"
                        CommandParameter="Subtract"
                        HeightRequest="30"
                        HorizontalOptions="Start">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="faregular"
                                Glyph="{x:Static icons:Faregular.SquareMinus}"
                                Size="20"
                                Color="{AppThemeBinding Dark={StaticResource Secondary},
                                                        Light={StaticResource Primary}}" />
                        </ImageButton.Source>
                    </ImageButton>
                    <StackLayout
                        Grid.Column="1"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="Center">
                        <Entry
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalTextAlignment="Center"
                            Placeholder="Amount" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="28"
                            HorizontalOptions="Center"
                            Text="USD$"
                            TextColor="{AppThemeBinding Light={StaticResource OffBlack},
                                                        Dark={StaticResource White}}" />
                        <Label
                            FontAttributes="Bold"
                            FontSize="Small"
                            HorizontalOptions="Center"
                            Text="Recommended Price"
                            TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                        Dark={StaticResource Secondary}}" />
                    </StackLayout>
                    <ImageButton
                        Grid.Column="2"
                        CommandParameter="Add"
                        HeightRequest="30"
                        HorizontalOptions="End">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="faregular"
                                Glyph="{x:Static icons:Faregular.SquarePlus}"
                                Size="30"
                                Color="{AppThemeBinding Dark={StaticResource Secondary},
                                                        Light={StaticResource Primary}}" />
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>

            </Border>

            <!--  Find offers button  -->
            <Button
                CornerRadius="10"
                FontSize="20"
                HeightRequest="60"
                HorizontalOptions="FillAndExpand"
                Text="Find Driver"
                TextColor="White" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>